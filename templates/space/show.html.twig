{% extends 'base.html.twig' %}

{% block title %}Space{% endblock %}

{% block body %}
    <h1>Space</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ space.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ space.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ space.description }}</td>
            </tr>
            <tr>
                <th>Created_date</th>
                <td>{{ space.createdDate ? space.createdDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Actif</th>
                <td>{{ space.actif ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ space.image }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('space_index') }}">back to list</a>

    <a href="{{ path('space_edit', {'id': space.id}) }}">edit</a>

    {{ include('space/_delete_form.html.twig') }}
{% endblock %}
