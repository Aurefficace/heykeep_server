{% extends 'baseSecurity.html.twig' %}

{% block title %}Log in!
{% endblock %}
{% block stylesheets %}
	<link href="{{ asset('heykeep/css/login.css') }}" rel="stylesheet" type="text/css">
{% endblock %}
{% block body %}

	{% if linkValidity is defined %}
		<div class="alert alert-danger" role="alert">
			{{linkValidity}}
			<a class="text-white" href="{{ path('app_login') }}">Retour à l'accueil</a>
		</div>
	{% endif %}

	{% if linkValidity is not defined %}
		
<div class="container-login100">
	<div class="limiter_forgotten d-flex justify-content-center align-items-center flex-column px-5 py-5 bg-white rounded">
				<div class="login100-pic js-tilt" data-tilt>
                    <img src="{{ asset('heykeep/img/heykeep_logo.png') }}" alt="logo">
				</div>
				<div class="loginsmall js-tilt " data-tilt>
					<img src="{{ asset('heykeep/img/logo-responsive.png') }}" alt="logo mobile">
				</div>
		<h2 class="login100-form-title mt-5">
						Changer de mot passe
		</h2>
		<form class="login100-form validate-form" method="post">
			<div class="wrap-input100 validate-input" data-validate="Password is required">
				<label for="password">Nouveau mot de passe *</label>
				<input type="password" name="password" id="inputPassword" class="input100" required>
	
				<span class="symbol-input100-reset">
					<i class="fa fa-lock" aria-hidden="true"></i>
				</span>
			</div>
			<div class="wrap-input100 validate-input" data-validate="Password is required">
				<label for="passwordConfirmation">Confirmation Nouveau Mot de passe *</label>
				<input type="password" name="passwordConfirmation" id="inputPasswordConfirmation" class="input100" required>
			
				<span class="symbol-input100-reset">
					<i class="fa fa-lock" aria-hidden="true"></i>
				</span>
			</div>
			<div class="container-login100-form-btn">
				<button class="login100-form-btn" type="submit">
					Réinitialiser Mot de Passe
				</button>
			</div>
		</form>
	</div>
	</div>
	{% endif %}


	{% if passwordReset is defined %}
		<div class="alert alert-success" id="success" role="alert">
			{{passwordReset}}
			<a class="text-white" href="{{ path('app_login') }}">Retour à l'accueil</a>
		</div>
	{% endif %}
	{% if passwordConfirmation is defined %}
		<div class="alert alert-danger" role="alert">
			{{passwordConfirmation}}
		</div>
	{% endif %}


{% endblock %}

 {% block javascripts %}
 <script src="{{ asset('heykeep/js/resetPassword.js') }}"></script>
 {% endblock %}
