{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}
{% block stylesheets %} <link href="{{ asset('heykeep/css/login.css') }}" rel="stylesheet" type="text/css">{% endblock %}
{% block body %}
<!-- Default form login -->
<form class="text-center p-5 col-md-6 col-xl-4" method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
        </div>
    {% endif %}
    <p>Identifiant : stephanie@steph.fr Mot de passe : stephanie123!</p>

    <h2 class="h4 mb-4 red-text">Se connecter</h2>

    <!-- Email -->
    <label class="mt-3" for="inputPseudo">Pseudo</label>
    <input type="text" value="{{ last_username }}" name="pseudo" id="inputPseudo" class="form-control" required autofocus>

    <!-- Password -->
    <label class="mt-3" for="inputPassword">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <div class="d-flex justify-content-around">
        <div>
            <!-- Remember me -->
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="defaultLoginFormRemember">
                <label class="custom-control-label mt-3" for="defaultLoginFormRemember">Se souvenir de moi</label>
            </div>
        </div>
        <div class="mt-3">
            <!-- Forgot password -->
            <a href="">Mot de passe oublié?</a>
        </div>
    </div>

    <!-- Sign in button -->
    <button class="btn btn-block my-4 bg-red text-white rounded-pill col-md-4 mx-auto" type="submit">Se connecter</button>

    <!-- Register -->
    <p>Pas encore membre?
        <a href="">S'enregistrer</a>
    </p>
</form>
<!-- Default form login -->
{% endblock %}
