{% extends 'baseSecurity.html.twig' %}

{% block title %}Log in!{% endblock %}
{% block stylesheets %} <link href="{{ asset('heykeep/css/login.css') }}" rel="stylesheet" type="text/css">{% endblock %}
{% block body %}


<div class="limiter">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté {{ app.user.username }}, <a href="{{ path('api_logout') }}">Se déconnecter</a>
        </div>
    {% endif %}
		<div class="container-login100">
			<div class="wrap-login100">
				<div class="login100-pic js-tilt" data-tilt>
                    <img src="{{ asset('heykeep/img/heykeep_logo.png') }}" alt="logo">
					<img src="{{ asset('heykeep/img/illustration.png') }}" alt="illustration">
				</div>
				<div class="loginsmall js-tilt " data-tilt>
					<img src="{{ asset('heykeep/img/logo-responsive.png') }}" alt="logo mobile">
				</div>

				<form class="login100-form validate-form d-flex flex-column justify-content-center" method="post">
					<h2 class="login100-form-title">
						connectez-vous
					</h2>

					<div class="wrap-input100 validate-input" data-validate = "Valid email is required: ex@abc.xyz">
                        <input type="text" value="{{ last_username }}" name="email" id="inputEmail" class="input100" required autofocus>
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-envelope" aria-hidden="true"></i>
						</span>
					</div>

					<div class="wrap-input100 validate-input" data-validate = "Password is required">
						<input type="password" name="password" id="inputPassword" class="input100" required>
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-lock" aria-hidden="true"></i>
						</span>
					</div>
                    
                     <input type="hidden" name="_csrf_token"
                      value="{{ csrf_token('authenticate') }}">

					<div class="container-login100-form-btn">
						<button class="login100-form-btn" type="submit">
							Se connecter
						</button>
					</div>
                    

					<div class="text-center p-t-12 mt-3">
						<span class="txt1">
							Vous avez oublié
						</span>
						<a class="txt2" href="{{ path('app_forgottenPassword') }}">
							Pseudo / Mot de passe?
						</a>
					</div>
				</form>
                <div class="text-center p-t-136 mt-3 w-100">
                    <button class="btn bg-red rounded-pill text-white">
                        <a class="text-white" href="{{ path('app_register') }}">Créer un compte</a>
                    </button>
                </div>
            </div>
		</div>
	</div>

<!-- Default form login -->
{% endblock %}
{% block javascripts %}
	<script src="{{ asset('heykeep/js/tilt.jquery.min.js') }}"></script>
	<script src="{{ asset('heykeep/js/main.js') }}"></script>
{% endblock %}
