{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}
{% block stylesheets %} <link href="{{ asset('heykeep/css/login.css') }}" rel="stylesheet" type="text/css">{% endblock %}
{% block body %}


<div class="limiter">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté {{ app.user.username }}, <a href="{{ path('api_logout') }}">Se déconnecter</a>
        </div>
    {% endif %}
    <p>Identifiant : stephanie@steph.fr Mot de passe : stephanie123!</p>
		<div class="container-login100">
			<div class="wrap-login100">
				<div class="login100-pic js-tilt" data-tilt>
                					<img src="{{ asset('heykeep/img/heykeep_logo.png') }}" alt="logo">
					<img src="{{ asset('heykeep/img/illustration.png') }}" alt="illustration">
				</div>

				<form class="login100-form validate-form" method="post">
					<h2 class="login100-form-title">
						connectez-vous
					</h2>

					<div class="wrap-input100 validate-input" data-validate = "Valid email is required: ex@abc.xyz">
                        <input type="text" value="{{ last_username }}" name="email" id="inputEmail" class="input100" required autofocus>
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-envelope" aria-hidden="true"></i>
						</span>
					</div>

					<div class="wrap-input100 validate-input" data-validate = "Password is required">
						<input type="password" name="password" id="inputPassword" class="input100" required>
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-lock" aria-hidden="true"></i>
						</span>
					</div>
                    
                     <input type="hidden" name="_csrf_token"
                      value="{{ csrf_token('authenticate') }}">

					<div class="container-login100-form-btn">
						<button class="login100-form-btn" type="submit">
							Se connecter
						</button>
					</div>
                    

					<div class="text-center p-t-12 mt-3">
						<span class="txt1">
							Vous avez oublié
						</span>
						<a class="txt2" href="{{ path('app_forgottenPassword') }}">
							Pseudo / Mot de passe?
						</a>
					</div>

					<div class="text-center p-t-136">
						<button class="btn bg-red rounded-pill text-white" type="submit">
							Créer un compte
						</button>
					</div>
				</form>
			</div>
		</div>
	</div>

<!-- Default form login -->
{% endblock %}
