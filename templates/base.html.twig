<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<!-- favIcon -->
		<link
		rel="icon" href="{{ asset('heykeep/img/favicon.png') }}"/>
		<!-- Font Awesome -->
		<link
		rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
		<!-- Google Fonts Quicksand -->
		<link
		rel="stylesheet" href="https://fonts.googleapis.com/css?family=Quicksand:300,400,500,700&display=swap">
		<!-- Bootstrap core CSS -->
		<link
		rel="stylesheet" href="{{ asset('theme/css/bootstrap.min.css') }}">
		<!-- Material Design Bootstrap -->
		<link
		rel="stylesheet" href="{{ asset('theme/css/mdb.min.css') }}">
		<!-- Your custom styles (optional) -->
		<link rel="stylesheet" href="{{ asset('theme/css/style.css') }}">
		<link rel="stylesheet" href="{{ asset('plugins/jqueryChosen/chosen.min.css') }}">
		<link rel="stylesheet" href="{{ asset('heykeep/css/heykeep.css') }}"> {% block stylesheets %}{% endblock %}

		</head>
		<body>
			{% include 'header.html.twig' %}
			<div class="spinner-border" id="spinner-master" role="status"></div>
			<div class="modal fade" id="centermodal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="display: none;" aria-hidden="true">
				<div class="modal-dialog" role="document">
					<div class="modal-content">
						<div class="modal-header">
							<h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
							<button type="button" class="close" data-dismiss="modal" aria-label="Close">
								<span aria-hidden="true">Ã—</span>
							</button>
						</div>
						<div class="modal-body">
							...
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-secondary waves-effect waves-light" data-dismiss="modal">Close</button>
							<button type="button" class="btn btn-primary waves-effect waves-light">Save changes</button>
						</div>
					</div>
				</div>
			</div>
			<div role="alert" aria-live="assertive" aria-atomic="true" class="alert toast" data-autohide="false">
				<div class="">

					<strong class="mr-auto" id="notifTitle"></strong>

					<button type="button" class="ml-2 mb-1 close" id="closeButton" data-dismiss="toast" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="toast-body" id="notifContent"></div>
			</div>
			{% block body %}
			{% endblock %}
			<span id="usefull-targets"
					data-idUser="{{app.user.id}}"
				  data-target-discussion-index="{{ path('discussion_index') }}"
				  data-target-search-user-autocomplete="{{ path('search_user_autocomplete') }}"
				  data-target-get-user-autocomplete="{{ path('get_user_autocomplete') }}"></span>
			
			<script type="text/javascript">
				var $usefullTargets;
			</script>
			<script src="{{ asset('theme/js/jquery.js') }}"></script>
			<script src="{{ asset('theme/js/popper.js') }}"></script>
			<script src="{{ asset('theme/js/bootstrap.js') }}"></script>
			<script src="{{ asset('theme/js/mdb.js') }}"></script>
			<script src="{{ asset('plugins/validator/jquery.validate.min.js') }}"></script>
			<script src="{{ asset('plugins/validator/localization/messages_fr.js') }}"></script>
			<script src="{{ asset('plugins/jquery/jquery.form.min.js') }}"></script>
			<script src="{{ asset('plugins/jqueryChosen/chosen.jquery.min.js') }}"></script>

			<script src="{{ asset('bundles/pugxautocompleter/js/autocompleter-jqueryui.js') }}"></script>

			<script src="{{ asset('heykeep/js/main.js') }}"></script>
			<script src="{{ asset('heykeep/js/discussion.js') }}"></script>

			{% include 'messagerie/messagerie.html.twig' %}
			{% include 'footer.html.twig' %}
			{% block javascripts %}{% endblock %}
		</body>
	</html>
