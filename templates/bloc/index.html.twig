{% extends 'base.html.twig' %}

{% block title %}Bloc index{% endblock %}

{% block body %}
    <h1>Bloc index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Created_date</th>
                <th>Title</th>
                <th>Description</th>
                <th>Isarchiv</th>
                <th>Ispublic</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bloc in blocs %}
            <tr>
                <td>{{ bloc.id }}</td>
                <td>{{ bloc.createdDate ? bloc.createdDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ bloc.title }}</td>
                <td>{{ bloc.description }}</td>
                <td>{{ bloc.isarchiv ? 'Yes' : 'No' }}</td>
                <td>{{ bloc.ispublic ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('bloc_show', {'id': bloc.id}) }}">show</a>
                    <a href="{{ path('bloc_edit', {'id': bloc.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('bloc_new') }}">Create new</a>
{% endblock %}
