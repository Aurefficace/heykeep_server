{% extends 'base.html.twig' %}

{% block title %}Bloc{% endblock %}

{% block body %}
    <h1>Bloc</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bloc.id }}</td>
            </tr>
            <tr>
                <th>Created_date</th>
                <td>{{ bloc.createdDate ? bloc.createdDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ bloc.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ bloc.description }}</td>
            </tr>
            <tr>
                <th>Isarchiv</th>
                <td>{{ bloc.isarchiv ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Ispublic</th>
                <td>{{ bloc.ispublic ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('bloc_index') }}">back to list</a>

    <a href="{{ path('bloc_edit', {'id': bloc.id}) }}">edit</a>

    {{ include('bloc/_delete_form.html.twig') }}
{% endblock %}
