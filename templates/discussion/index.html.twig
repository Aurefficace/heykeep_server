
{% block body %}
    <h1>Discussion index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Ispublic</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for discussion in discussions %}
            <tr>
                <td>{{ discussion.name }}</td>
                <td>{{ discussion.ispublic ? 'Yes' : 'No' }}</td>
                <td>
                <button onclick="callAjaxMasterDetail('{{ path('discussion_show', {'id': discussion.id})}}','#discussion','#discussion_list')">
					<i class="fas fa-plus-circle"></i>
				</button>
                    {# <a href="{{ path('discussion_show', {'id': discussion.id}) }}">show</a> #}
                    <a href="{{ path('discussion_edit', {'id': discussion.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

